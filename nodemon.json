{
  "watch": ["server/src", "build/server"],
  "ext": "ts,js,json",
  "ignore": [
    "server/src/**/*.spec.ts",
    "server/src/**/*.test.ts",
    "node_modules",
    "server/dist",
    "app/**",
    "build/client",
    "*.config.ts",
    "*.config.js"
  ],
  "exec": "npm run build:server && node server/dist/index.js",
  "verbose": true,
  "delay": "1000",
  "restartable": "rs",
  "signal": "SIGTERM",
  "env": {
    "NODE_ENV": "development"
  }
}

