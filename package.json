{
  "name": "dkmedia-unified",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run build:client && npm run dev:server",
    "dev:server": "nodemon",
    "dev:watch": "concurrently \"npm run dev:server\" \"vite\"",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p server/tsconfig.json && cp server/src/secret-key server/dist/secret-key && mkdir -p server/dist/logs",
    "build:client": "remix vite:build",
    "build:all": "npm run build:client && npm run build:server",
    "start": "node server/dist/index.js",
    "rebuild": "npm run build:client && npm run build:server && npm start",
    "vpsrebuild": "npm run build:client && npm run build:server && pm2 delete dk-media-app || true && NODE_OPTIONS='--max-old-space-size=450 --expose-gc' pm2 start server/dist/index.js --name 'dk-media-app' --max-memory-restart 550M",
    "preview": "vite preview",
    "lint": "eslint ."
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.970.0",
    "@emailjs/nodejs": "^5.0.2",
    "@fastify/cors": "^11.0.0",
    "@fastify/mongodb": "^9.0.2",
    "@fastify/multipart": "^9.0.3",
    "@fastify/passport": "^3.0.2",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/secure-session": "^8.1.1",
    "@fastify/static": "^8.1.1",
    "@reduxjs/toolkit": "^2.6.1",
    "@remix-run/node": "^2.17.0",
    "@remix-run/react": "^2.17.0",
    "@sinclair/typebox": "^0.34.25",
    "@tailwindcss/vite": "^4.0.9",
    "axios": "^1.8.4",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.6.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "framer-motion": "^11.0.0",
    "isbot": "^5.1.23",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.10.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.12",
    "obscenity": "^0.4.6",
    "passport-google-oauth20": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0",
    "tailwindcss": "^4.0.9",
    "tailwindcss-animated": "^2.0.0",
    "undici": "^6.21.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.21.0",
    "@remix-run/dev": "^2.17.0",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.13.8",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^5.4.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.21.3",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.18",
    "lightningcss-linux-x64-gnu": "^1.30.2"
  }
}
